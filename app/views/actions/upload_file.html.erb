<div class="card" style="width: 26rem; margin:2in; margin-top:0.5in">
    <div class="card-body">
        <!--Header-->
        <div class="form-header default-color">
            <h3><i class="fa fa-upload"></i> Upload your document</h3>
        </div>
            <%= form_with(url: actions_process_file_path, local: true, method: :post) do |f| %>
                <div class="form-group">
                    <%= f.file_field :content ,class: "form-control"%>
                </div>
                <div class="form-group">
                    <label for="Tags">Tag your document (optional)</label>
                    <%= f.text_field :tags ,class: "form-control" %>
                </div>
                <div class="control-group">
                    <%= f.submit "Upload", class: "btn btn-primary form-control", onclick: '$("#Notification").removeClass("invisible");' %>
                </div>
            <% end %>
    </div>
    <div id="Notification" class="card-footer invisible">
        <i class="fa fa-refresh fa-spin fa-2x fa-fw"></i>Please wait while file is being uploaded!
        <span class="sr-only">Loading...</span>
    </div>
</div>
